{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "name": "objectsToPull",
          "label": "Object to Pull",
          "widget-type": "multi-select",
          "widget-attributes": {
            "delimiter": ",",
            "default": "",
            "options": [
              "Article Comments",
              "Post Comments",
              "Requests Comments",
              "Ticket Comments",
              "Groups",
              "Organizations",
              "Satisfaction Ratings",
              "Tags",
              "Ticket Fields",
              "Ticket Metrics",
              "Ticket Metric Events",
              "Tickets",
              "Users"
            ]
          }
        },
        {
          "name": "objectsToSkip",
          "label": "Object to Skip",
          "widget-type": "multi-select",
          "widget-attributes": {
            "delimiter": ",",
            "default": "",
            "options": [
              "Article Comments",
              "Post Comments",
              "Requests Comments",
              "Ticket Comments",
              "Groups",
              "Organizations",
              "Satisfaction Ratings",
              "Tags",
              "Ticket Fields",
              "Ticket Metrics",
              "Ticket Metric Events",
              "Tickets",
              "Users"
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Start Date",
          "name": "startDate",
          "widget-attributes": {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "widget-type": "textbox",
          "label": "End Date",
          "name": "endDate",
          "widget-attributes": {
            "placeholder": "YYYY-MM-DDThh:mm:ssZ (ex: 2019-01-01T00:00:00Z)"
          }
        },
        {
          "name": "satisfactionRatingsScore",
          "label": "Satisfaction Ratings Score",
          "widget-type": "select",
          "widget-attributes": {
            "default": "",
            "values": [
              "",
              "Offered",
              "Unoffered",
              "Received",
              "Received With Comment",
              "Received Without Comment",
              "Good",
              "Good With Comment",
              "Good Without Comment",
              "Bad",
              "Bad With Comment",
              "Bad Without Comment"
            ]
          }
        },
        {
          "widget-type": "hidden",
          "name": "zendeskBaseUrl",
          "widget-attributes": {
            "default": "https://%s.zendesk.com/api/v2/%s"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Table Name Field",
          "name": "tableNameField",
          "widget-attributes": {
            "placeholder": "The name of the field that holds the table name.",
            "default": "tablename"
          }
        }
      ]
    },
    {
      "label": "Connection",
      "properties": [
        {
          "widget-type": "toggle",
          "label": "Use connection",
          "name": "useConnection",
          "widget-attributes": {
            "on": {
              "value": "true",
              "label": "YES"
            },
            "off": {
              "value": "false",
              "label": "NO"
            },
            "default": "false"
          }
        },
        {
          "widget-type": "connection-select",
          "label": "Connection",
          "name": "connection",
          "widget-attributes": {
            "connectionType": "Zendesk"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Admin Email",
          "name": "adminEmail"
        },
        {
          "widget-type": "password",
          "label": "API Token",
          "name": "apiToken"
        },
        {
          "widget-type": "csv",
          "label": "Subdomains",
          "name": "subdomains",
          "widget-attributes": {
            "delimiter": ",",
            "value-placeholder": "List of Subdomains to read object from."
          }
        },
        {
          "widget-type": "number",
          "label": "Max Retry Count",
          "name": "maxRetryCount",
          "widget-attributes": {
            "min": "0",
            "default": "10"
          }
        },
        {
          "widget-type": "number",
          "label": "Connect Timeout",
          "name": "connectTimeout",
          "widget-attributes": {
            "min": "0",
            "default": "300"
          }
        },
        {
          "widget-type": "number",
          "label": "Read Timeout",
          "name": "readTimeout",
          "widget-attributes": {
            "min": "0",
            "default": "300"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-default-type": "string"
      }
    }
  ],
  "filters": [
    {
      "name": "showConnectionProperties ",
      "condition": {
        "expression": "useConnection == false"
      },
      "show": [
        {
          "type": "property",
          "name": "adminEmail"
        },
        {
          "type": "property",
          "name": "apiToken"
        },
        {
          "type": "property",
          "name": "subdomains"
        },
        {
          "type": "property",
          "name": "maxRetryCount"
        },
        {
          "type": "property",
          "name": "connectTimeout"
        },
        {
          "type": "property",
          "name": "readTimeout"
        }
      ]
    },
    {
      "name": "showConnectionId",
      "condition": {
        "expression": "useConnection == true"
      },
      "show": [
        {
          "type": "property",
          "name": "connection"
        }
      ]
    }
  ]
}